.flex {
	display: flex
}

.flex-between {
	display: flex
	justify-content: space-between
}

.flex-wrap-between {
	display: flex
	flex-wrap: wrap
	justify-content: space-between
}

.flex-end {
	display: flex
	justify-content: flex-end
}

.flex-center {
	display: flex
	justify-content: center
	align-items: center
}

.flex-align-center {
	display: flex
	align-items: center
}

.flex-align-end {
	display: flex
	align-items: flex-end
}

.flex-justify-end {
	display: flex
	justify-content: flex-end
}

.flex-column-center {
	display: flex
	flex-direction: column
	justify-content: center
	align-items: center
}

.flex-column-center-vertical {
	display: flex
	flex-direction: column
	justify-content: center
}

.txt_right {
	text-align: right
}

.rotate180 {
	transform rotate(180deg)
}
.fz_6-25{
	font-size: 6.25rem
}
.fz_3-75{
	font-size: 3.75rem
}
.fz_3{
	font-size: 3rem
}
.mt_2-1rem{
	margin-top: 2.1rem
}
rem(amount) {
	unit(ceil(amount / 16, 2), "rem")
}

per(item, minus) {
	floor(percentage((100 / item - minus) / 100), 2)
}

.overflow_hidden {
	overflow: hidden
}
iframe {
	width: 100%
	height: 100%
	border: 0
}