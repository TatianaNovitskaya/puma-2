.footer{
	padding: 1rem 0 2rem
}
.create{
	text-align: right
	padding-right: 1rem
	p{
		font-size: rem(20);
		line-height: 1;
		color: #00EBDD;
	}
	a{
		display: inline-block
		font-size: rem(20);
		line-height: 1;
		color: #00EBDD;
		text-decoration: none
		position: relative
		 &:after {
		     content: "";
		     display: block;
		     position: absolute;
			 background: #00ebdd
			 width: 0
			 height: 1px
			 left: 0
			 right: 0
			 bottom: -2px
			 transition width 400ms ease-in-out
		   }
		
	}
	&:hover{
		a{
			&:after{
				width: 100%
			}
		}
	}
}