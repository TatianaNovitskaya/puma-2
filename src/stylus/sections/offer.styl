.offer {
	position: relative
	padding: 3.75rem 0;
}

.offer__wrap {
	display: flex
	justify-content: space-between
}

.offer__title {
	h4 {
		text-transform: uppercase
		color: #ffffff
	}
	
	h3 {
		color: #ffffff
		font-weight: 100
	}
	
	span {
		font-size: rem(32)
		line-height: rem(32)
		color: yellow
	}
	
	p {
		font-size: rem(18);
		line-height: rem(20);
		color: #00EBDD;
		margin-top: 0.8rem;
		width: 74%;
	}
}

.offer__title-right {
	text-align: right
}

.offer__column-1 {
	width: 78%;
	padding-left: 1.5rem;
}

.offer__title-left {
	margin-top: -0.4rem
}

.offer__form {
	margin-top: 3.4rem
	
	.order-form {
		display: flex
		
	}
}


.order-form {
	input {
		width: rem(260)
		//height: rem(55)
		background: #FFFFFF;
		box-shadow: 0px 0px 10px #085F63;
		border-radius: 5px;
		padding-left: 1.3rem;
		padding-top: 1.9rem;
		padding-bottom: 0.6rem
		margin-right: rem(20)
		
		&::placeholder {
			font-size: rem(16);
			line-height: 1;
			color: #555555;
			font-family: 'HelveticaNeueCyr';
			font-weight: normal
		}
	}
	
	button {
		border: none
		width: rem(289)
		height: rem(55)
		color: #ffffff
		font-weight: bold;
		font-size: rem(24);
		line-height: 1;
		text-transform: uppercase;
		margin-left: 1rem;
		padding: 1.1rem 5rem;
		cursor: pointer
	}
}

.offer__column-2 {
	width: 22%
	
}


.offer__img-1 {
	width: 8.25rem
	position: relative
	margin: -3.3rem 0 0 1rem;
	z-index: 5
	animation: move-left 2s ease-in-out alternate infinite;
}
.offer__img-2 {
	width: 8.85rem;
	position: relative;
	margin: -24.6rem 0 0 6.3rem;
	z-index: 3;
	animation: move-right 2s ease-in-out alternate infinite;
}
@keyframes move-left {
 	from {
		-webkit-transform: translateY(0);
	transform: translateY(0);
	}
	to {
		-webkit-transform: translateY(-5%);
	transform: translateY(-5%);
	}
}
@keyframes move-right {
	from {
		-webkit-transform: translateY(0);
		transform: translateY(0);
	}
	to {
		-webkit-transform: translateY(-3%);
		transform: translateY(-3%);
	}
}