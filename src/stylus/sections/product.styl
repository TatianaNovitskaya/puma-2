.product {
	position: relative;
	padding: 3.7rem 0 0;
	.bg__text {
		bottom: 15.9rem;
	}
}

.product__title {
	padding-left: 1.7rem
	
	h3 {
		font-weight: 300
		color: #ffffff
	}
}

.product__item-1 {
	margin-bottom: 11.3rem
}

.product__wrap {
	display: flex
	justify-content: space-between
	flex-wrap: wrap
	margin-top: 4.6rem
	position: relative
}

.product__img-title {
	display: flex
	justify-content: flex-start
	margin-top: -4rem;
	margin-left: 0.5rem;
	h3 {
		font-size: rem(24);
		line-height: 1;
		text-transform: uppercase;
		color: #00EBDD;
		width: 60%
	}
}
.product__column{
	position: relative
}
.product__column-1 {
	width: 29%
}

.product__img-1 {
	width: 33.05rem;
	margin: -5.6rem 0 0 -2.2rem;
}

.product__img-2 {
	width: 32.75rem;
	margin: -5.5rem 0 0 -1.4rem;
}

.product__column-2 {
	width: 66%
}

.product__table {
	
}

.product__table-line {
	display: flex
	padding-left: 0.2rem
	
	p, span {
		color: #ffffff
		font-size: rem(18);
		line-height: rem(30);
	}
	
	p {
		width: 100%
		max-width: 14.23rem;
	}
}

.product__price {
	display: flex
	align-items: baseline
	margin-top: 1.2rem
	
	.old-price {
		font-size: rem(30)
		margin: 0 0.3rem 0 0.4rem;
	}
	
	.new-price {
		font-size: rem(55)
	}
}

.product__gallery {
	display: flex
	margin-top: 1.8rem;
	
	a {
		display: inline-block
		width: rem(160)
		height: rem(100)
		margin: 0 0.3rem;
		box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
		position: relative
		&:after {
			content: "";
			display: block;
			position: absolute;
			background: rgba(#000, 0.2)
			top: 0
			right: 0
			bottom: 0
			left: 0
			pointer-events none
			opacity: 0
			transition opacity 300ms ease-in-out
		}
		
		&:hover {
			&:after {
				opacity: 1
			}
		}
	}
	
	img {
		width: 100%
		height: 100%
		object-fit cover
	}
}

.product__offer {
	position: absolute
	top: -1rem
	right: 2.1rem
	background: rgba(#00EBDD, 0.7);
	border-radius: 5px;
	width: rem(154)
	display: flex
	flex-direction: column
	justify-content: center
	align-items: center
	padding: 0.6rem 0 0.8rem 0;
}

.product__offer-img-1 {
	width: 13.05rem;
	margin: -2.8rem 0 0 1rem;
}

.product__offer-img-2 {
	width: 12.85rem;
	margin-top: -4.3rem;
}

.product__offer-sign {
	margin: -0.3rem 0 0 5.6rem;
	
	p {
		color: #faff00
		font-size: rem(64);
		line-height: 0.7
		font-weight: bold
	}
}

.product__offer-txt {
	p {
		font-size: rem(26);
		line-height: 1;
		text-transform: uppercase;
		color: #FAFF00;
		font-weight: bold
	}
}


.product-form {
	width: 100%
	padding: 0 2.4rem
	margin-top: 3.1rem
	position: relative
	z-index: 5
	.order-form {
		width: 100%
		display: flex
		justify-content: space-between
	}
}

input[type='number'] {
	-moz-appearance:textfield;
}

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
	-webkit-appearance: none;
}
.product__item-2 {
	.product-form {
		margin-top: 3.1rem
	}
}

.product__img_big {
	width: 62.38rem;
	margin: 1.5rem 0 0 -26.2rem;
}