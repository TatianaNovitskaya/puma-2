.top-info {
	padding: 2.1rem 0 10.1rem
	position: relative
}

.top-info__wrap {
	position: relative
}
	
	.top-info__img-left {
		position: absolute;
		top: -2.1rem;
		left: -3.1rem;
		width: 24.18rem;
	}

.top-info__img-right {
	position: absolute;
	top: -1.9rem;
	right: -19.7rem;
	width: 55.88rem;
	
}

.top-info__column {
	width: 100%
	max-width: 45.44rem
	margin: auto
}

.info__logo {
	width: 100%
	max-width: rem(250)
	margin: 0 0 0 4.7rem;
	padding-top: 1rem
}

.top-info__title {
	margin-top: 1.6rem
	margin-left: 4.7rem
	
	p {
		color: #ffffff
		font-size: rem(34);
		line-height: rem(30);
		
	}
}

.old-price {
	color: #00EBDD;
	font-weight: bold;
	font-size: rem(36);
	line-height: 1;
	text-decoration: line-through;
}

.new-price {
	color: #FAFF00;
	font-weight: bold;
	font-size: rem(64);
	line-height: 1;
}

.top-info__price {
	display: flex
	flex-direction: column
	
}

.top-info__discount-btn {
	margin-left: 4.6rem;
}

.info__footnote {
	margin-top: 0.9rem
	
	p {
		font-weight: bold;
		font-size: 1rem;
		line-height: 1;
		text-transform: uppercase;
		color: #FFFFFF;
	}
}

.info__list-img {
	width: rem(25)
}

.info__list {
	margin: 3.6rem 0 0 11.55rem;
	
	li {
		display: flex
		align-items: center
		margin-bottom: 2.2rem
		
		&:last-child {
			margin-bottom: 0
		}
	}
}

.info__list-txt {
	font-weight: normal;
	font-size: rem(24);
	line-height: rem(21);
	color: #FFFFFF;
	margin-left: 0.8rem
}

.info__sale {
	p {
		font-weight: bold;
		font-size: rem(96);
		line-height: 1;
		text-transform: uppercase;
		color: #FAFF00;
	}
}

.top-info__sale {
	position: absolute;
	right: 16.3rem;
	top: 2.4rem;
}
	.bg__text{
		position: absolute
		left: -2.2rem;
		right: -2.2rem;
		bottom: 0rem
		display: flex
		justify-content: space-between
		span{
			font-weight: bold;
			font-size: rem(96);
			line-height: 0.7;
			text-transform: uppercase;
			color: #00EBDD;
			opacity: 0.25;
		}
	}
		.btn-cart{
			width: rem(100)
			height: rem(100)
			border-radius: 50%
			background: orange
			position: fixed;
			cursor: pointer
			right: 21.4rem;
			bottom: 6.9rem;
			box-shadow: 0px 0px 10px #085F63;
			display: flex
			justify-content: center
			align-items: center
			transition transform 300ms ease-in-out
			z-index: 999
			&:hover{
				transform scale(1.05)
			}
			img{
				width: rem(50)
			}
		}