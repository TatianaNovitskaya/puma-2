.reviews{
	position: relative
	background: #ffffff
	margin-top: -1px
	padding: 0 0 17.4rem
	&:after {
		content: '';
		position: absolute;
		bottom: -15.9rem;
		left: -3rem;
		right: -3rem;
		height: 26rem;
		background: -webkit-linear-gradient(0deg, #097988 0%, #0ec5ba 100%);
		background: linear-gradient(90deg, #097988 0%, #0ec5ba 100%);
		transform: rotate(-9.6deg);
		box-shadow: 0px -5px 3px rgba(8, 75, 72, 0.2);
		
	}
}
	.reviews__title{
		h3{
			font-weight: 300
			color: #084B48;
		}
	}
.reviews__wrap{
	position: relative
	z-index: 5
}
.reviews__slider {
	width: 100%
	margin-top: 3.4rem
	position: relative
	
	.swiper-slide {
		display: flex
	}
}

.review__item {
	width: 50%
	padding-right: 5rem
}

.review__item-txt {
	p {
		font-size: rem(18);
		line-height: rem(20);
		color: #555555;
		margin-bottom: 0.5rem
	}
}

.review__item-user {
	margin-top: 0.8rem
	
	p {
		font-weight: bold
		font-size: rem(16);
		line-height: 1;
		text-transform: uppercase;
		color: #0EC1B8;
	}
}

.swiper-button-prev:after, .swiper-button-next:after {
	display: none
}
.chevron-svg{
	width: 1.7rem;
	height: 1.7rem;
}
.review__button-prev {
	top: auto;
	left: -0.3rem;
	bottom: -6.8rem;
	
}
.review__button-next {
	top: auto
	right: auto
	left: 7.8rem
	bottom: -6.8rem;
}