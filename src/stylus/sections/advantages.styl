.advantages {
	background: #ffffff
	position: relative
	padding: 16.4rem 0 1rem;
	
	&:after {
		content: "";
		display: block;
		position: absolute;
		top: -1px
		left: 0
		right: -1rem
		background: url("../images/bg-triangle.png") no-repeat
		-webkit-background-size: 100%
		background-size: 100%
		height: rem(690)
	}
}

.advantages__title {
	h2 {
		color: #084b48
	}
	
	p {
		font-size: rem(20);
		line-height: rem(21);
		color: #555555;
		margin-top: 1.4rem;
		width: 93%;
	}
}

.advantages__wrap {
	display: flex
	justify-content: space-between
	padding-left: 0.95rem
}

.advantages__column {
	width: 50%
}

.advantages__item {
	width: 100%
	max-width: rem(317)
}

.advantages__item-1 {
	margin: 3.1rem 0 0 3rem;
}

.advantages__item-icon-1 {
	width: 8.2rem;
	margin-left: -0.8rem;
}

.advantages__item-icon {
	width: rem(67)
}

.advantages__item-title {
	h3 {
		font-size: rem(24);
		line-height: 1;
		text-transform: uppercase;
		color: #0EC1B8;
	}
}

.advantages__item-txt {
	margin-top: 1.05rem;
	
	p {
		font-size: rem(20);
		line-height: rem(21);
		color: #555555;
	}
}

.advantages__item-2 {
	margin: 0.7rem 0 0 24.5rem;
	
	.advantages__item-title {
		margin-top: 1.2rem
	}
}

.advantages__item-3 {
	margin: 0.2rem 0 0 12.9rem;
	
	.advantages__item-title {
		margin-top: 1.4rem
	}
	
	.advantages__item-icon {
		margin-left: 0.5rem
	}
}

.advantages__video {
	width: 100%
	max-width: rem(600)
	height: rem(380)
	box-shadow 0 4px 4px rgba(#000, 0.25)
	background: url("../images/video.jpg") no-repeat
	-webkit-background-size: cover
	background-size: cover
	position: relative
	margin: -11.6rem 0 0 0.1rem;
	z-index: 5
}

.play-svg {
	cursor: pointer
	fill: none
	width: 5.25rem
	height: 5.25rem
	position: absolute
	top: 50%
	left: 50%
	transform translate(-50%, -50%)
	z-index: 5
	border-radius: 50%
	transition transform 300ms ease-in-out
	&:hover{
		transform translate(-50%, -50%) scale(1.05)
	}
	
}
.play-icon-svg{
	width: rem(60)
	height: rem(60)
}
.advantages__img{
	width: 100%;
	max-width: 28.13rem;
	position: relative;
	box-shadow 0 4px 4px rgba(#000, 0.25)
}
.advantages__img-1 {
	margin: -10rem 0 0 30.3rem;
	z-index: 1;
}
.advantages__img-2 {
	margin: -23.9rem 0 0 8.5rem;
	z-index: 4;
}
	.advantages__discount-btn{
		display: flex
		justify-content: center
		margin-top: 2.1rem;
		margin-left: 7.6rem;
	}